  <div class="header-main hidden-xs">

    <nav class="nav-container" role="navigation">

      <div class="nav-inner container hidden-xs">
          
        <div id="menu" class="main-menu collapse navbar-collapse navbar-ex1-collapse">
          <ul class="nav navbar-nav">{#11#}
            {% for category in categories[0:3] %} {#1#}

