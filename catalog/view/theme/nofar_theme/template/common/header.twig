<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]>
<html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]>
<html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html class="wide wow-animation" dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="alternate" hreflang="{{ lang }}" href="{{ base }}"/>
     {% if meta_title %}
    <title>{{ store_name }}{{ meta_title }}</title>
     {% else %}
    <title>{{ store_name }}{{ title }}</title>
     {% endif %}
    <base href="{{ base }}"/>
    {% if description %}
        <meta name="description" content="{{ description }}"/>
    {% endif %}
    {% if keywords %}
        <meta name="keywords" content="{{ keywords }}"/>
    {% endif %}

    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js"></script>
    <script type="text/javascript" src="catalog/view/javascript/js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="catalog/view/javascript/js/popper.min.js"></script>
      <script src="catalog/view/javascript/jquery/magnific/jquery.magnific-popup.min.js" type="text/javascript"></script>
  <link href="catalog/view/javascript/jquery/magnific/magnific-popup.css" rel="stylesheet" type="text/css" />
    <script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>

      <link href="catalog/view/theme/nofar_theme/css/all.css" rel="stylesheet" type="text/css"/>
    <link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css"/>

    {% if direction == 'rtl' %}
        <link href="https://fonts.googleapis.com/css?family=Arimo&display=swap" rel="stylesheet">
        <link rel='stylesheet' media='screen and (max-width: 768px)' href='catalog/view/theme/nofar_theme/css/mdb-he.min.css' />
        <link href="catalog/view/javascript/bootstrap/css/bootstrap-he.css" rel="stylesheet" type="text/css" media="screen"/>
        {#<link href="catalog/view/javascript/bootstrap/css/bootstrap-phone-he.css" rel="stylesheet" type="text/css" media="screen and (max-width: 767px)"/>#}
        <link href="catalog/view/theme/nofar_theme/stylesheet/stylesheet-he.css" rel="stylesheet" type="text/css" media="screen"/>
        <link href="catalog/view/theme/nofar_theme/stylesheet/phone-style-he.css" rel="stylesheet" type="text/css" media="screen and (max-width: 768px)"/>
    {% else %}
        <link href="//fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet" type="text/css"/>
        <link rel='stylesheet' media='screen and (max-width: 768px)' href='catalog/view/theme/nofar_theme/css/mdb.min.css' />
        <link href="catalog/view/javascript/bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css" media="screen"/>
        <link href="catalog/view/javascript/bootstrap/css/bootstrap-phone.css" rel="stylesheet" type="text/css" media="screen and (max-width: 767px)"/>
        <link href="catalog/view/theme/nofar_theme/stylesheet/stylesheet.css" rel="stylesheet" type="text/css" media="screen"/>
        <link href="catalog/view/theme/nofar_theme/stylesheet/phone-style.css" rel="stylesheet" type="text/css" media="screen and (max-width: 768px)"/>
    {% endif %}
    
    {% for style in styles %}
        <link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}"/>
    {% endfor %}

    {% for script in scripts %}
        <script src="{{ script }}" type="text/javascript"></script>
    {% endfor %}

    {% for link in links %}
        <link href="{{ link.href }}" rel="{{ link.rel }}"/>
    {% endfor %}

    {% for analytic in analytics %}
        {{ analytic }}
    {% endfor %}

    <script src="catalog/view/javascript/common.js" type="text/javascript"></script>
</head>

<body class="homepage-v3 hidden-sn white-skin animated">
<nav id="top">
    <div class="container">
        <div class="row">
            <div class="top-left col-md-5 col-sm-3 hidden-xs">
                <ul class="list-inline left">
                    <li>
                        <a href="{{ contact }}" title="{{ telephone }}"><i class="fa fa-phone"></i></a>
                        <span class="hidden-sm hidden-md">{{ telephone_num }}</span>
                    </li>
                    <li>
                        <a href="{{ contact }}"><i class="fa fa-envelope"></i></a>
                        <span class="hidden-sm hidden-md">{{ email }}</span>
                    </li>
                    <li>
                        <a href="{{ contact }}"><i class="fa fa-clock-o"></i></a>
                        <span class="hidden-sm hidden-md">{{ opening_hours }}</span>
                    </li>
                </ul>
            </div>

            <div id="top-links" class="top-right nav col-md-7 col-sm-9">
                <ul class="list-inline right">
                    <li>
                        <a href="{{ wishlist }}" id="wishlist-total" title="{{ text_wishlist }}">
                            <i class="fa fa-heart hidden-sm hidden-md hidden-lg"></i>
                            <span class="hidden-xs">{{ text_wishlist }}</span>
                        </a>
                    </li>
                    <li class="dropdown hvr-btn">
                        <a href="{{ account }}" title="{{ text_account }}" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-user hidden-sm hidden-md hidden-lg"></i>
                            <span class="hidden-xs">{{ text_account }}</span>&nbsp;<i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu user-down">
                            {% if logged %}
                                <li><a href="{{ account }}">{{ text_account }}</a></li>
                                <li><a href="{{ order }}">{{ text_order }}</a></li>
                                <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
                                <li><a href="{{ logout }}">{{ text_logout }}</a></li>
                            {% else %}
                                <li><a href="{{ register }}"><i class="fa fa-address-book-o"></i>{{ text_register }}</a></li>
                                <li><a href="{{ login }}"><i class="fa fa-sign-in"></i>{{ text_login }}</a></li>
                            {% endif %}
                        </ul>
                    </li>
                    <li class="hvr-btn">{{ currency }}</li>
                    <li class="hvr-btn">{{ language }}</li>
                    <li class="hvr-btn">{{ cart }}</li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<div class="container hidden-xs">
    <div class="row">
        <div id="logo">
            <a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive"/></a>
        </div>
    </div>
</div>
    
{{ menu }}